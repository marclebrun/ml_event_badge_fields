<?xml version="1.0"?>
<odoo>
    <data>

        <record id="view_event_form_extended" model="ir.ui.view">
            <field name="name">event.event.form.ext</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form" />
            <field name="arch" type="xml">
                <xpath expr="//notebook" position="inside">
                    <page string="Badge" name="event_badge_page">
                        <group>
                            <field
                                name="event_logo"
                                string="Event Logo"
                                />
                            <field
                                name="badge_front"
                                string="Badge Front"
                                />
                            <field
                                name="badge_back"
                                string="Badge Back"
                                />
                            <field
                                name="badge_innerleft"
                                string="Badge Inner Left"
                                />
                            <field
                                name="badge_innerright"
                                string="Badge Inner Right"
                                />
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
